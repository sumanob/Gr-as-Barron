<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff1495fd"

    tools:context="todamujer.utsjr.com.todamujer.DetalleNotaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesLblTitulo"
        android:textColor="#FFF"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#FFF"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesLblFecha"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#FFF"
        android:layout_height="wrap_content"
        android:id="@+id/DetallesLblNota"
        android:textSize="20sp"
        />


    <!-- Botones de accion -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetallesBtnEliminar"
            android:src="@drawable/eliminar"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetallesBtnModificar"
            android:src="@drawable/editar"

            />

    </LinearLayout>


</LinearLayout>
